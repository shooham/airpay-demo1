# AirPay Payment Gateway Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
TRUST_PROXY=1

# Domain Configuration
DOMAIN_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# AirPay Credentials (Get these from AirPay dashboard)
AIRPAY_ENVIRONMENT=sandbox
AIRPAY_MERCHANT_ID=your_merchant_id
AIRPAY_USERNAME=your_username
AIRPAY_PASSWORD=your_password
AIRPAY_SECRET_KEY=your_secret_key
AIRPAY_CLIENT_ID=your_client_id
AIRPAY_CLIENT_SECRET=your_client_secret

# IP Whitelisting (AirPay server IPs)
AIRPAY_WHITELIST_IPS=103.25.232.0/24,103.25.233.0/24,202.131.96.0/24,103.231.78.0/24
ADMIN_WHITELIST_IPS=127.0.0.1,::1,your.office.ip.address
BYPASS_IP_WHITELIST=false

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/payment-gateway
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME=30000
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_CONNECT_TIMEOUT=10000
DB_AUTH_SOURCE=admin
DB_SSL=false
DB_SSL_VALIDATE=true
DB_READ_PREFERENCE=primary
DB_WRITE_CONCERN=majority
DB_JOURNAL=true
DB_WRITE_TIMEOUT=10000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
WEBHOOK_SECRET=your_webhook_secret_key_here

# API Keys (format: keyname:keyvalue,keyname2:keyvalue2)
API_KEYS=

# Payment Limits
MIN_PAYMENT_AMOUNT=1
MAX_PAYMENT_AMOUNT=1000000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Body Parser Limits
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# Features
SERVE_STATIC=false
ENABLE_DOCS=true

# Webhook Configuration
WEBHOOK_ENDPOINTS=merchant=https://your-merchant-site.com/webhook
MERCHANT_WEBHOOK_URL=https://your-merchant-site.com/webhook

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Cleanup Configuration
CLEANUP_EXPIRED_TRANSACTIONS=true
CLEANUP_OLD_LOGS_DAYS=30

# Development/Testing
DEBUG=false
MOCK_AIRPAY_RESPONSES=false